%h1 Please log in #{AUTH_CONFIG[:type] == :ldap ? 'with your LDAP credentials' : ''}

= form_tag(login_url, :method => "post", :class => 'form-horizontal') do
  .control-group
    %label.control-label{:for => 'username'} Username
    .controls
      = text_field_tag :username
  .control-group
    %label.control-label{:for => 'password'} Password
    .controls
      = password_field_tag :password
  .form-actions
    = submit_tag "Log In", :class => 'btn btn-primary'