.field
  = link_to_remove_fields f
  = f.hidden_field :order, 'data-order' => 'true'
  = f.text_field :label, :placeholder => 'Multiple-Choice Question', :class => 'span6'

  .fields
    = f.fields_for :mc_question_options do |builder|
      = render 'mc_question_option_fields', :f => builder
  .subsection.add-parent
    = link_to_add_fields "Add Option", 'icon-plus', f, :mc_question_options, 'btn btn-success'