-if current_user.errors.any?
  #error_explanation.alert.alert-error
    %a.close{'data-dismiss' => 'alert', 'href' => '#'} Ã—
    %h4.alert-heading= "#{pluralize(current_user.errors.count, "error")} prohibited your changes from being saved:"
    %ul
      - current_user.errors.full_messages.each do |msg|
        %li= msg

= form_for current_user, :url => update_account_path, :html => {:class => 'form-horizontal'} do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name

  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email

  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.password_field :password

  .control-group
    = f.label :password_confirmation, 'Confirm Password', :class => 'control-label'
    .controls
      = f.password_field :password_confirmation

  .form-actions
    %p= f.submit 'Save', :class => 'btn btn-primary'
    %p= link_to '&laquo; Back to Account'.html_safe, account_path
